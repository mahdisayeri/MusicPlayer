<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="track"
            type="com.tokastudio.music_offline.model.Song" />
        <variable
            name="clickHandler"
            type="com.tokastudio.music_offline.view.fragment.TrackPlayingFragment.ClickHandler" />
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/track_arrow_back"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_arrow_back"
                android:onClick="@{clickHandler::backBtn}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageButton>

            <TextView
                android:text="@{track.title}"
                tools:text="Title"
                android:id="@+id/track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="@color/white2"
                android:textSize="21sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/track_share"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_share"
                android:onClick="@{clickHandler::shareBtn}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageButton>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/track_cover"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>
            <ScrollView
                android:visibility="invisible"
                android:id="@+id/lyric_layout"
                android:layout_margin="5dp"
                android:background="@drawable/lyric_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/white1"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="@{track.lyric, default= lyric}"
                    android:textAlignment="center"
                    android:id="@+id/track_lyric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp">
                </TextView>
            </ScrollView>

            <ImageButton
                android:id="@+id/track_favorite"
                android:layout_marginStart="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingTop="3dp"
                android:background="@drawable/fav_background"
                android:src="@drawable/ic_favorite"
                android:onClick="@{clickHandler::favBtn}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageButton>

            <TextView
                android:id="@+id/show_hide_lyric"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="5dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="5dp"
                android:onClick="@{clickHandler::showLyricBtn}"
                android:background="@drawable/rounding_style_border"
                android:textColor="@color/white1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/show_lyric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_margin="4dp"
        android:id="@+id/frameLayout_ad_trackPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/seekBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <SeekBar
                    android:progressBackgroundTint="@color/white1"
                    android:layout_below="@+id/startTime"
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="@string/zero_time"
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text="@string/zero_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/controlPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBarLayout"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp">

                <ImageButton
                    android:id="@+id/playPauseButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/fav_background"
                    android:src="@drawable/ic_play"
                    android:onClick="@{clickHandler::playPauseBtn}" />

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_skip_previous"
                    android:onClick="@{clickHandler::previousBtn}"
                    android:layout_toStartOf="@id/playPauseButton"
                    android:layout_marginEnd="20dp" />

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_skip_next"
                    android:onClick="@{clickHandler::nextBtn}"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/playPauseButton" />

                <ImageButton
                    android:id="@+id/repeatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_repeat_off"
                    android:onClick="@{clickHandler::repeatBtn}"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/nextButton" />

                <ImageButton
                    android:id="@+id/shuffleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_shuffle_off"
                    android:onClick="@{clickHandler::shuffleBtn}"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@id/previousButton" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</layout>