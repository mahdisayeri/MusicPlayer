<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
       <variable
           name="listItem"
           type="com.tokastudio.music_offline.model.Track" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:clickable="true"
        android:focusable="true"
        bind:cardElevation="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:onClick="@{clickListener}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--        android:background="@{listItem.isPlaying ? @color/colorBackGround : @color/colorPrimary , default= @color/colorPrimary}"-->

            <!--        bind:loadSquareSongCover="@{listItem.songCover}"-->

            <androidx.cardview.widget.CardView
                bind:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/music_icon_placeholder"
                    bind:loadTrackCover="@{listItem.cover}"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@{listItem.title}"
                    android:textDirection="ltr"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@{listItem.playing ? @color/color_blue : @color/white1}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@{listItem.artistName}"
                    android:textDirection="ltr"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@{listItem.playing ? @color/color_blue : @color/white1}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <io.gresse.hugo.vumeterlibrary.VuMeterView
                android:id="@+id/vuMeter"
                android:visibility="@{listItem.playing ? View.VISIBLE : View.INVISIBLE , default= invisible}"
                vumeter:vumeter_stopSize="5dp"
                vumeter:vumeter_speed="4"
                vumeter:vumeter_blockNumber="5"
                vumeter:vumeter_blockSpacing="8dp"
                vumeter:vumeter_backgroundColor="@color/color_blue"
                vumeter:vumeter_startOff="false"
                android:layout_width="15dp"
                android:layout_height="18dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>