<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="track"
            type="com.tokastudio.music_offline.model.Song" />
        <variable
            name="clickHandler"
            type="com.tokastudio.music_offline.ui.activity.MainActivity.ClickHandler" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph_offline" />

        <LinearLayout
            android:id="@+id/currentPlayingLayout"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{(view) -> clickHandler.clickOnCurrentPlayingSong(view)}"
            android:background="@drawable/current_playing_song_background"
            android:backgroundTint="@color/white1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="25dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/music_placeholder2"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <!--            bind:loadSongCover="@{listItem.data}"-->
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:paddingHorizontal="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    tools:text="Title"
                    android:text="@{track.title}"
                    android:textColor="?attr/colorButtonNormal"
                    android:maxLines="1"
                    android:textDirection="ltr"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    tools:text="Artist Name"
                    android:text="@{track.artistName}"
                    android:textColor="?attr/colorButtonNormal"
                    android:maxLines="1"
                    android:textDirection="ltr"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageButton
                android:src="@drawable/ic_round_skip_previous_24"
                android:backgroundTint="@color/white1"
                android:tint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:src="@{track.isPlaying ? @drawable/ic_round_pause_24 : @drawable/ic_round_play_arrow_24 , default= @drawable/ic_round_play_arrow_24}"
                android:tint="@{track.isPlaying ? @color/colorAccent : @color/colorPrimary , default= @color/colorPrimary}"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:src="@drawable/ic_round_skip_next_24"
                android:backgroundTint="@color/white1"
                android:tint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</layout>